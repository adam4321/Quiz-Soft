{{!-- Home dashboard view - using express handlebars --}}

<title>Quiz Soft | Quiz Builder</title>
<link type="text/css" rel="stylesheet" href="css/quiz-setup-page.css">

{{!-- Container for the dashboard --}}
<div id="top-row-container">
    <div id="dashboard-container" class="mdl-card mdl-shadow--2dp">

        <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
            <h2 class="mdl-card__title-text">Quiz Builder</h2>
        </div>

        <div id="setup-container">
            
            <!--Unwritten route in action -->
            <form id="setup_form" name="setup_form" action="/quiz_soft/quiz_create" method="get">
                <label class="quiz_title">QUIZ NAME:</label>
                <br>
                <input required type="text" id="quiz_title" name="quiz_title" placeholder="Enter quiz name">
                <p></p>

                <label for="question">CATEGORY:</label>
                <br>
                <input required type="text" id="category" name="category" placeholder="Enter quiz category">
                <p></p>

                <label for="question">TIME LIMIT:</label>
                <br>
                <input required min="1" type="number" id="time_limit" name="time_limit" placeholder="Time limit in minutes">
                <p></p>

                <button id="startQuizBtn" class="mdl-button mdl-js-button mdl-button--raised question-btn" > 
                    Start Building Quiz
                </button>
            </form>

        </div> 
    </div>
</div>
